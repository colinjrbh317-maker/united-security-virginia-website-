---
import Layout from '../layouts/Layout.astro';
import MainNavigation from '../components/MainNavigation';
import ContactSection from '../components/ContactSection';
import Footer from '../components/Footer';
import SchemaMarkup from '../components/SchemaMarkup';
import InternalLinkCard from '../components/InternalLinkCard';
import { Button } from '../components/ui/button';
import { Factory, Cog, Truck, HardHat, CheckCircle, Phone, Star, MapPin, Shield, Camera, Clock } from 'lucide-react';
import '../styles/global.css';

const schemaData = {
  serviceName: "Manufacturing Security Virginia",
  name: "Professional Manufacturing Security Systems Southwest Virginia",
  description: "Expert security solutions for Virginia manufacturing facilities. Industrial access control, production floor surveillance, equipment protection for Southwest Virginia manufacturers.",
  url: "https://unitedsecurityva.com/manufacturing-security-virginia",
  areaServed: ["Southwest Virginia", "Roanoke", "Lynchburg", "Martinsville", "New River Valley", "Henry County"],
  offers: [
    {
      "@type": "Offer",
      "itemOffered": {
        "@type": "Service",
        "name": "Industrial Access Control Systems",
        "description": "Heavy-duty access control systems for Virginia manufacturing facilities with 24/7 shift management"
      }
    },
    {
      "@type": "Offer", 
      "itemOffered": {
        "@type": "Service",
        "name": "Production Floor Security",
        "description": "Comprehensive surveillance and security systems for manufacturing production areas and equipment protection"
      }
    },
    {
      "@type": "Offer",
      "itemOffered": {
        "@type": "Service", 
        "name": "Manufacturing Facility Protection",
        "description": "Complete security solutions for Virginia manufacturing plants including perimeter, warehouse, and office areas"
      }
    }
  ]
};
---

<Layout 
  title="Manufacturing Security Virginia | Industrial Security Systems Southwest VA | United Security" 
  description="Professional manufacturing security for Virginia industrial facilities. Production floor surveillance, equipment protection, 24/7 access control. Licensed since 1988."
  type="service"
>
	<SchemaMarkup type="Service" data={schemaData} client:load />
	
	<MainNavigation client:load />
	
	<!-- Hero Section -->
	<section class="relative py-24 lg:py-32 bg-gradient-to-br from-hero-bg to-primary-light overflow-hidden">
		<div class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1565043589221-1a6fd9ae45c7?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80')] bg-cover bg-center opacity-10"></div>
		<div class="relative container mx-auto px-4 sm:px-6 lg:px-8">
			<div class="max-w-4xl mx-auto text-center">
				<h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-header mb-6 animate-fade-in-up">
					<span class="text-primary">Manufacturing Security Virginia</span><br>
					Industrial-Grade Protection Systems
				</h1>
				<p class="text-xl lg:text-2xl text-body mb-8 leading-relaxed animate-fade-in-up [animation-delay:0.2s]">
					Comprehensive security solutions for Virginia manufacturing facilities. Production floor surveillance, equipment protection, and 24/7 access control designed for industrial environments.
				</p>
				<div class="flex flex-col sm:flex-row gap-4 justify-center items-center animate-fade-in-up [animation-delay:0.4s]">
					<Button size="xl" className="bg-primary hover:bg-primary-hover text-white font-semibold" onClick={() => {
						document.getElementById('contact')?.scrollIntoView({ behavior: 'smooth' });
					}}>
						Get Free Manufacturing Security Quote
					</Button>
					<Button variant="outline" size="xl" className="border-primary text-primary hover:bg-primary hover:text-white" asChild>
						<a href="tel:540-989-9393" class="flex items-center">
							<Phone className="w-5 h-5 mr-2" />
							Call 540-989-9393
						</a>
					</Button>
				</div>
			</div>
		</div>
	</section>

	<!-- Trust Indicators -->
	<section class="py-12 bg-white border-b border-gray-100">
		<div class="container mx-auto px-4 sm:px-6 lg:px-8">
			<div class="flex flex-wrap justify-center items-center gap-8 text-body">
				<div class="flex items-center">
					<CheckCircle className="w-5 h-5 mr-2 text-primary" />
					<span>Licensed DCJS# 11-3283</span>
				</div>
				<div class="flex items-center">
					<CheckCircle className="w-5 h-5 mr-2 text-primary" />
					<span>Manufacturing Security Experts</span>
				</div>
				<div class="flex items-center">
					<CheckCircle className="w-5 h-5 mr-2 text-primary" />
					<span>24/7 Industrial Operations</span>
				</div>
				<div class="flex items-center">
					<CheckCircle className="w-5 h-5 mr-2 text-primary" />
					<span>Heavy-Duty Equipment</span>
				</div>
			</div>
		</div>
	</section>

	<!-- Manufacturing Security Overview -->
	<section class="py-20 bg-section-bg">
		<div class="container mx-auto px-4 sm:px-6 lg:px-8">
			<div class="max-w-6xl mx-auto">
				<div class="text-center mb-16">
					<h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-header mb-6">
						Industrial-Grade Manufacturing Security
					</h2>
					<p class="text-xl text-body max-w-3xl mx-auto leading-relaxed">
						From automotive plants to textile facilities, we provide robust security solutions designed for Virginia's diverse manufacturing sector, protecting equipment, inventory, and ensuring worker safety.
					</p>
				</div>

				<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
					<div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300">
						<div class="w-16 h-16 bg-primary/10 rounded-xl flex items-center justify-center mb-6">
							<Factory className="w-8 h-8 text-primary" />
						</div>
						<h3 class="text-xl font-bold text-header mb-4">Production Floor Security</h3>
						<p class="text-body leading-relaxed mb-6">
							Comprehensive surveillance and access control for manufacturing production areas, protecting valuable equipment and ensuring operational continuity.
						</p>
						<ul class="space-y-2">
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">Production line monitoring</span>
							</li>
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">Equipment protection</span>
							</li>
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">Quality control area security</span>
							</li>
						</ul>
					</div>

					<div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300">
						<div class="w-16 h-16 bg-primary/10 rounded-xl flex items-center justify-center mb-6">
							<Truck className="w-8 h-8 text-primary" />
						</div>
						<h3 class="text-xl font-bold text-header mb-4">Warehouse & Loading Security</h3>
						<p class="text-body leading-relaxed mb-6">
							Advanced security systems for manufacturing warehouses, inventory storage, and loading dock areas with real-time monitoring and access control.
						</p>
						<ul class="space-y-2">
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">Inventory protection</span>
							</li>
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">Loading dock monitoring</span>
							</li>
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">Shipping/receiving security</span>
							</li>
						</ul>
					</div>

					<div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300">
						<div class="w-16 h-16 bg-primary/10 rounded-xl flex items-center justify-center mb-6">
							<HardHat className="w-8 h-8 text-primary" />
						</div>
						<h3 class="text-xl font-bold text-header mb-4">Worker Safety & Access</h3>
						<p class="text-body leading-relaxed mb-6">
							Employee safety integration with security systems, shift-based access control, and emergency response capabilities for 24/7 manufacturing operations.
						</p>
						<ul class="space-y-2">
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">Shift access management</span>
							</li>
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">Emergency response integration</span>
							</li>
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">Contractor access control</span>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Service Areas -->
	<section class="py-20 bg-white">
		<div class="container mx-auto px-4 sm:px-6 lg:px-8">
			<div class="max-w-4xl mx-auto text-center">
				<h2 class="text-3xl font-bold text-header mb-8">
					Virginia Manufacturing Security Service Areas
				</h2>
				<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
					<div class="flex items-center p-4 bg-gray-50 rounded-lg">
						<MapPin className="w-6 h-6 text-primary mr-3" />
						<span class="font-medium text-header">Roanoke Manufacturing</span>
					</div>
					<div class="flex items-center p-4 bg-gray-50 rounded-lg">
						<MapPin className="w-6 h-6 text-primary mr-3" />
						<span class="font-medium text-header">Lynchburg Industrial</span>
					</div>
					<div class="flex items-center p-4 bg-gray-50 rounded-lg">
						<MapPin className="w-6 h-6 text-primary mr-3" />
						<span class="font-medium text-header">Martinsville Manufacturing</span>
					</div>
					<div class="flex items-center p-4 bg-gray-50 rounded-lg">
						<MapPin className="w-6 h-6 text-primary mr-3" />
						<span class="font-medium text-header">New River Valley</span>
					</div>
					<div class="flex items-center p-4 bg-gray-50 rounded-lg">
						<MapPin className="w-6 h-6 text-primary mr-3" />
						<span class="font-medium text-header">Henry County Plants</span>
					</div>
					<div class="flex items-center p-4 bg-gray-50 rounded-lg">
						<MapPin className="w-6 h-6 text-primary mr-3" />
						<span class="font-medium text-header">Southwest Virginia</span>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Manufacturing Security Solutions -->
	<section class="py-20 bg-muted/30">
		<div class="container mx-auto px-4 sm:px-6 lg:px-8">
			<div class="max-w-6xl mx-auto">
				<h2 class="text-3xl font-bold text-header mb-12 text-center">
					Specialized Manufacturing Security Systems
				</h2>
				<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
					<InternalLinkCard
						title="Industrial Access Control"
						description="Heavy-duty access control systems designed for manufacturing environments with 24/7 shift management and employee tracking."
						href="/access-control-systems-virginia"
						badge="Industrial"
						client:load
					/>
					<InternalLinkCard
						title="Production Line Cameras"
						description="High-resolution surveillance systems for production floors with real-time monitoring and quality control integration."
						href="/security-cameras-virginia"
						client:load
					/>
					<InternalLinkCard
						title="Warehouse Security"
						description="Comprehensive security for manufacturing warehouses with inventory protection and loading dock monitoring systems."
						href="/warehouse-security-systems"
						client:load
					/>
					<InternalLinkCard
						title="Equipment Protection"
						description="Specialized security systems protecting valuable manufacturing equipment and machinery from theft and vandalism."
						href="/equipment-protection-security"
						client:load
					/>
					<InternalLinkCard
						title="Perimeter Security"
						description="Industrial-grade perimeter protection for manufacturing facilities with fence line detection and gate controls."
						href="/perimeter-security-systems"
						client:load
					/>
					<InternalLinkCard
						title="Manufacturing Locksmith"
						description="Industrial locksmith services for manufacturing facilities including master key systems and high-security hardware."
						href="/commercial-locksmith-virginia"
						client:load
					/>
				</div>
			</div>
		</div>
	</section>

	<!-- Industrial Standards & Compliance -->
	<section class="py-20 bg-white">
		<div class="container mx-auto px-4 sm:px-6 lg:px-8">
			<div class="max-w-4xl mx-auto text-center">
				<h2 class="text-3xl font-bold text-header mb-8">
					Industrial Standards & Safety Compliance
				</h2>
				<p class="text-xl text-body mb-12 leading-relaxed">
					Our manufacturing security systems are designed to integrate with existing safety protocols and meet industrial standards while enhancing overall facility protection.
				</p>
				<div class="grid md:grid-cols-2 gap-8 mb-12">
					<div class="bg-gray-50 rounded-lg p-8">
						<h3 class="text-xl font-semibold text-header mb-4">OSHA Integration</h3>
						<ul class="text-left space-y-2">
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">Safety protocol integration</span>
							</li>
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">Emergency response coordination</span>
							</li>
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">Worker safety monitoring</span>
							</li>
						</ul>
					</div>
					<div class="bg-gray-50 rounded-lg p-8">
						<h3 class="text-xl font-semibold text-header mb-4">Industrial Fire Codes</h3>
						<ul class="text-left space-y-2">
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">Fire system integration</span>
							</li>
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">Emergency egress management</span>
							</li>
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">Code compliance verification</span>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- 24/7 Manufacturing Operations -->
	<section class="py-20 bg-section-bg">
		<div class="container mx-auto px-4 sm:px-6 lg:px-8">
			<div class="max-w-6xl mx-auto">
				<h2 class="text-3xl font-bold text-header mb-12 text-center">
					24/7 Manufacturing Security Technology
				</h2>
				<div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
					<div class="bg-white rounded-lg p-6 text-center">
						<Clock className="w-12 h-12 text-primary mx-auto mb-4" />
						<h3 class="text-lg font-semibold text-header mb-2">Round-the-Clock Operation</h3>
						<p class="text-sm text-body">Security systems designed for continuous 24/7 manufacturing operations with shift-based management.</p>
					</div>
					<div class="bg-white rounded-lg p-6 text-center">
						<Camera className="w-12 h-12 text-primary mx-auto mb-4" />
						<h3 class="text-lg font-semibold text-header mb-2">Industrial Surveillance</h3>
						<p class="text-sm text-body">Heavy-duty cameras and monitoring systems built for harsh manufacturing environments.</p>
					</div>
					<div class="bg-white rounded-lg p-6 text-center">
						<Shield className="w-12 h-12 text-primary mx-auto mb-4" />
						<h3 class="text-lg font-semibold text-header mb-2">Equipment Protection</h3>
						<p class="text-sm text-body">Advanced sensors and alarms protecting valuable manufacturing equipment and machinery.</p>
					</div>
					<div class="bg-white rounded-lg p-6 text-center">
						<Cog className="w-12 h-12 text-primary mx-auto mb-4" />
						<h3 class="text-lg font-semibold text-header mb-2">Process Integration</h3>
						<p class="text-sm text-body">Security systems that integrate with manufacturing processes without disrupting operations.</p>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Manufacturing Testimonials -->
	<section class="py-20 bg-white">
		<div class="container mx-auto px-4 sm:px-6 lg:px-8">
			<div class="max-w-4xl mx-auto text-center">
				<h2 class="text-3xl font-bold text-header mb-12">
					Trusted by Virginia Manufacturing Leaders
				</h2>
				<div class="grid md:grid-cols-2 gap-8">
					<div class="bg-gray-50 rounded-lg p-8">
						<div class="flex items-center mb-4">
							{[...Array(5)].map((_, i) => (
								<Star key={i} className="w-5 h-5 text-yellow-400 fill-current" />
							))}
						</div>
						<p class="text-body italic mb-4">
							"United Security installed a comprehensive security system for our automotive manufacturing plant. The production floor cameras and access control work perfectly with our 24/7 operations. Excellent industrial-grade equipment."
						</p>
						<div class="text-sm text-header font-semibold">
							- Virginia Manufacturing Plant Manager
						</div>
					</div>
					<div class="bg-gray-50 rounded-lg p-8">
						<div class="flex items-center mb-4">
							{[...Array(5)].map((_, i) => (
								<Star key={i} className="w-5 h-5 text-yellow-400 fill-current" />
							))}
						</div>
						<p class="text-body italic mb-4">
							"Professional installation with complete understanding of manufacturing requirements. The warehouse security system protects our inventory while the shift-based access control manages our workforce perfectly. Highly recommend."
						</p>
						<div class="text-sm text-header font-semibold">
							- Virginia Industrial Facility Security Manager
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Why Choose Manufacturing Security -->
	<section class="py-20 bg-primary-light">
		<div class="container mx-auto px-4 sm:px-6 lg:px-8">
			<div class="max-w-4xl mx-auto text-center">
				<h2 class="text-3xl font-bold text-header mb-8">
					Why Choose United Security for Manufacturing Facilities?
				</h2>
				<div class="grid md:grid-cols-2 gap-8 mb-12">
					<div class="bg-white rounded-lg p-6 shadow-md">
						<h3 class="text-xl font-semibold text-header mb-4">Manufacturing Expertise</h3>
						<p class="text-body">Extensive experience with Virginia manufacturing facilities from automotive plants to textile operations, understanding unique industrial security needs.</p>
					</div>
					<div class="bg-white rounded-lg p-6 shadow-md">
						<h3 class="text-xl font-semibold text-header mb-4">Industrial-Grade Equipment</h3>
						<p class="text-body">Heavy-duty security systems designed for demanding manufacturing environments with 24/7 operation capabilities and robust construction.</p>
					</div>
					<div class="bg-white rounded-lg p-6 shadow-md">
						<h3 class="text-xl font-semibold text-header mb-4">Safety Integration</h3>
						<p class="text-body">Security solutions that integrate seamlessly with existing safety protocols, OSHA requirements, and emergency response procedures.</p>
					</div>
					<div class="bg-white rounded-lg p-6 shadow-md">
						<h3 class="text-xl font-semibold text-header mb-4">Virginia Industrial Contractor</h3>
						<p class="text-body">Licensed (DCJS# 11-3283) Virginia security contractor with 35+ years serving manufacturing facilities across Southwest Virginia.</p>
					</div>
				</div>
			</div>
		</div>
	</section>

	<ContactSection client:load />
	<Footer client:load />
</Layout>