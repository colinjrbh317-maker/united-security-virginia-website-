---
import Layout from '../layouts/Layout.astro';
import MainNavigation from '../components/MainNavigation';
import ContactSection from '../components/ContactSection';
import Footer from '../components/Footer';
import SchemaMarkup from '../components/SchemaMarkup';
import InternalLinkCard from '../components/InternalLinkCard';
import { Button } from '../components/ui/button';
import { Factory, Heart, Building, Truck, CheckCircle, Phone, Star, MapPin } from 'lucide-react';
import '../styles/global.css';

const schemaData = {
  serviceName: "Lynchburg Commercial Security",
  name: "Professional Commercial Security Lynchburg Virginia",
  description: "Expert commercial security for Lynchburg businesses. Access control, security cameras, locksmith services for manufacturing, healthcare, and industrial facilities.",
  url: "https://unitedsecurityva.com/lynchburg-commercial-security",
  areaServed: ["Lynchburg", "Amherst", "Appomattox", "Bedford County", "Campbell County"],
  offers: [
    {
      "@type": "Offer",
      "itemOffered": {
        "@type": "Service",
        "name": "Lynchburg Access Control Systems",
        "description": "Professional access control for Lynchburg area manufacturing and healthcare facilities"
      }
    },
    {
      "@type": "Offer", 
      "itemOffered": {
        "@type": "Service",
        "name": "Lynchburg Security Camera Installation",
        "description": "Industrial-grade surveillance systems for Lynchburg commercial properties"
      }
    },
    {
      "@type": "Offer",
      "itemOffered": {
        "@type": "Service", 
        "name": "Lynchburg Commercial Locksmith",
        "description": "Commercial locksmith services for Lynchburg industrial and healthcare facilities"
      }
    }
  ]
};
---

<Layout 
  title="Lynchburg Commercial Security | Industrial Security Systems Lynchburg VA | United Security" 
  description="Professional commercial security for Lynchburg manufacturing, healthcare & industrial facilities. Access control, security cameras, locksmith services. Licensed since 1988."
  type="service"
>
	<SchemaMarkup type="Service" data={schemaData} client:load />
	
	<MainNavigation client:load />
	
	<!-- Hero Section -->
	<section class="relative py-24 lg:py-32 bg-gradient-to-br from-hero-bg to-primary-light overflow-hidden">
		<div class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1565043589221-1a6fd9ae45c7?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80')] bg-cover bg-center opacity-10"></div>
		<div class="relative container mx-auto px-4 sm:px-6 lg:px-8">
			<div class="max-w-4xl mx-auto text-center">
				<h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-header mb-6 animate-fade-in-up">
					<span class="text-primary">Lynchburg Commercial Security</span><br>
					Industrial & Healthcare Specialists
				</h1>
				<p class="text-xl lg:text-2xl text-body mb-8 leading-relaxed animate-fade-in-up [animation-delay:0.2s]">
					Comprehensive security solutions for Lynchburg's manufacturing, healthcare, and industrial sectors. Professional access control, surveillance, and locksmith services.
				</p>
				<div class="flex flex-col sm:flex-row gap-4 justify-center items-center animate-fade-in-up [animation-delay:0.4s]">
					<Button size="xl" className="bg-primary hover:bg-primary-hover text-white font-semibold" onClick={() => {
						document.getElementById('contact')?.scrollIntoView({ behavior: 'smooth' });
					}}>
						Get Free Lynchburg Security Quote
					</Button>
					<Button variant="outline" size="xl" className="border-primary text-primary hover:bg-primary hover:text-white" asChild>
						<a href="tel:540-989-9393" class="flex items-center">
							<Phone className="w-5 h-5 mr-2" />
							Call 540-989-9393
						</a>
					</Button>
				</div>
			</div>
		</div>
	</section>

	<!-- Trust Indicators -->
	<section class="py-12 bg-white border-b border-gray-100">
		<div class="container mx-auto px-4 sm:px-6 lg:px-8">
			<div class="flex flex-wrap justify-center items-center gap-8 text-body">
				<div class="flex items-center">
					<CheckCircle className="w-5 h-5 mr-2 text-primary" />
					<span>Licensed DCJS# 11-3283</span>
				</div>
				<div class="flex items-center">
					<CheckCircle className="w-5 h-5 mr-2 text-primary" />
					<span>Industrial Security Experts</span>
				</div>
				<div class="flex items-center">
					<CheckCircle className="w-5 h-5 mr-2 text-primary" />
					<span>Healthcare Compliance</span>
				</div>
				<div class="flex items-center">
					<CheckCircle className="w-5 h-5 mr-2 text-primary" />
					<span>Central Virginia Presence</span>
				</div>
			</div>
		</div>
	</section>

	<!-- Lynchburg Market Overview -->
	<section class="py-20 bg-section-bg">
		<div class="container mx-auto px-4 sm:px-6 lg:px-8">
			<div class="max-w-6xl mx-auto">
				<div class="text-center mb-16">
					<h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-header mb-6">
						Security for Lynchburg's Industrial Economy
					</h2>
					<p class="text-xl text-body max-w-3xl mx-auto leading-relaxed">
						From manufacturing facilities to healthcare institutions, we provide robust security solutions tailored to Lynchburg's diverse commercial and industrial landscape.
					</p>
				</div>

				<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
					<div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300">
						<div class="w-16 h-16 bg-primary/10 rounded-xl flex items-center justify-center mb-6">
							<Factory className="w-8 h-8 text-primary" />
						</div>
						<h3 class="text-xl font-bold text-header mb-4">Manufacturing Security</h3>
						<p class="text-body leading-relaxed mb-6">
							Industrial-grade security systems for Lynchburg's manufacturing sector, protecting equipment, inventory, and ensuring worker safety.
						</p>
						<ul class="space-y-2">
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">Production facility security</span>
							</li>
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">Warehouse access control</span>
							</li>
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">Equipment protection</span>
							</li>
						</ul>
					</div>

					<div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300">
						<div class="w-16 h-16 bg-primary/10 rounded-xl flex items-center justify-center mb-6">
							<Heart className="w-8 h-8 text-primary" />
						</div>
						<h3 class="text-xl font-bold text-header mb-4">Healthcare Security</h3>
						<p class="text-body leading-relaxed mb-6">
							HIPAA-compliant security solutions for Lynchburg's medical facilities, hospitals, and healthcare providers with patient privacy focus.
						</p>
						<ul class="space-y-2">
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">Hospital security systems</span>
							</li>
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">Medical office protection</span>
							</li>
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">HIPAA compliance support</span>
							</li>
						</ul>
					</div>

					<div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300">
						<div class="w-16 h-16 bg-primary/10 rounded-xl flex items-center justify-center mb-6">
							<Building className="w-8 h-8 text-primary" />
						</div>
						<h3 class="text-xl font-bold text-header mb-4">Commercial Properties</h3>
						<p class="text-body leading-relaxed mb-6">
							Comprehensive security for Lynchburg's office buildings, retail centers, and mixed-use developments throughout the metropolitan area.
						</p>
						<ul class="space-y-2">
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">Office building security</span>
							</li>
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">Retail center protection</span>
							</li>
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">Mixed-use developments</span>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Service Areas -->
	<section class="py-20 bg-white">
		<div class="container mx-auto px-4 sm:px-6 lg:px-8">
			<div class="max-w-4xl mx-auto text-center">
				<h2 class="text-3xl font-bold text-header mb-8">
					Central Virginia Service Areas
				</h2>
				<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
					<div class="flex items-center p-4 bg-gray-50 rounded-lg">
						<MapPin className="w-6 h-6 text-primary mr-3" />
						<span class="font-medium text-header">Lynchburg</span>
					</div>
					<div class="flex items-center p-4 bg-gray-50 rounded-lg">
						<MapPin className="w-6 h-6 text-primary mr-3" />
						<span class="font-medium text-header">Amherst</span>
					</div>
					<div class="flex items-center p-4 bg-gray-50 rounded-lg">
						<MapPin className="w-6 h-6 text-primary mr-3" />
						<span class="font-medium text-header">Appomattox</span>
					</div>
					<div class="flex items-center p-4 bg-gray-50 rounded-lg">
						<MapPin className="w-6 h-6 text-primary mr-3" />
						<span class="font-medium text-header">Bedford County</span>
					</div>
					<div class="flex items-center p-4 bg-gray-50 rounded-lg">
						<MapPin className="w-6 h-6 text-primary mr-3" />
						<span class="font-medium text-header">Campbell County</span>
					</div>
					<div class="flex items-center p-4 bg-gray-50 rounded-lg">
						<MapPin className="w-6 h-6 text-primary mr-3" />
						<span class="font-medium text-header">Greater Lynchburg</span>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Industrial Security Solutions -->
	<section class="py-20 bg-muted/30">
		<div class="container mx-auto px-4 sm:px-6 lg:px-8">
			<div class="max-w-6xl mx-auto">
				<h2 class="text-3xl font-bold text-header mb-12 text-center">
					Industrial-Grade Security Solutions
				</h2>
				<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
					<InternalLinkCard
						title="Manufacturing Access Control"
						description="Heavy-duty access control systems designed for industrial environments with shift management."
						href="/access-control-systems-virginia"
						badge="Industrial"
						client:load
					/>
					<InternalLinkCard
						title="Warehouse Security Cameras"
						description="High-resolution surveillance systems for inventory protection and loading dock monitoring."
						href="/security-cameras-virginia"
						client:load
					/>
					<InternalLinkCard
						title="Healthcare Security Systems"
						description="HIPAA-compliant security solutions for medical facilities and patient care areas."
						href="/healthcare-security-virginia"
						client:load
					/>
					<InternalLinkCard
						title="Industrial Locksmith Services"
						description="Commercial locksmith services for heavy industrial doors, gates, and security hardware."
						href="/commercial-locksmith-virginia"
						client:load
					/>
					<InternalLinkCard
						title="Manufacturing Security"
						description="Comprehensive security systems designed specifically for production and manufacturing facilities."
						href="/manufacturing-security-virginia"
						client:load
					/>
					<InternalLinkCard
						title="Central Station Monitoring"
						description="24/7 professional monitoring with immediate response for industrial and healthcare emergencies."
						href="/central-station-monitoring"
						client:load
					/>
				</div>
			</div>
		</div>
	</section>

	<!-- Compliance & Standards -->
	<section class="py-20 bg-white">
		<div class="container mx-auto px-4 sm:px-6 lg:px-8">
			<div class="max-w-4xl mx-auto text-center">
				<h2 class="text-3xl font-bold text-header mb-8">
					Industry Compliance & Standards
				</h2>
				<div class="grid md:grid-cols-2 gap-8">
					<div class="bg-gray-50 rounded-lg p-8">
						<h3 class="text-xl font-semibold text-header mb-4">Healthcare Compliance</h3>
						<ul class="text-left space-y-2">
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">HIPAA privacy requirements</span>
							</li>
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">Patient area security</span>
							</li>
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">Medical record protection</span>
							</li>
						</ul>
					</div>
					<div class="bg-gray-50 rounded-lg p-8">
						<h3 class="text-xl font-semibold text-header mb-4">Industrial Standards</h3>
						<ul class="text-left space-y-2">
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">OSHA safety compliance</span>
							</li>
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">Industrial fire codes</span>
							</li>
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">Worker safety integration</span>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Local Testimonials -->
	<section class="py-20 bg-section-bg">
		<div class="container mx-auto px-4 sm:px-6 lg:px-8">
			<div class="max-w-4xl mx-auto text-center">
				<h2 class="text-3xl font-bold text-header mb-12">
					Trusted by Lynchburg Industry Leaders
				</h2>
				<div class="grid md:grid-cols-2 gap-8">
					<div class="bg-white rounded-lg p-8 shadow-md">
						<div class="flex items-center mb-4">
							{[...Array(5)].map((_, i) => (
								<Star key={i} className="w-5 h-5 text-yellow-400 fill-current" />
							))}
						</div>
						<p class="text-body italic mb-4">
							"United Security designed a comprehensive access control system for our manufacturing facility. They understand industrial environments and delivered exactly what we needed for our 24/7 operation."
						</p>
						<div class="text-sm text-header font-semibold">
							- Lynchburg Manufacturing Manager
						</div>
					</div>
					<div class="bg-white rounded-lg p-8 shadow-md">
						<div class="flex items-center mb-4">
							{[...Array(5)].map((_, i) => (
								<Star key={i} className="w-5 h-5 text-yellow-400 fill-current" />
							))}
						</div>
						<p class="text-body italic mb-4">
							"Professional healthcare security installation with full HIPAA compliance guidance. They worked around our patient schedule and delivered a system that protects both patients and staff."
						</p>
						<div class="text-sm text-header font-semibold">
							- Lynchburg Medical Facility Administrator
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Why Choose for Lynchburg -->
	<section class="py-20 bg-primary-light">
		<div class="container mx-auto px-4 sm:px-6 lg:px-8">
			<div class="max-w-4xl mx-auto text-center">
				<h2 class="text-3xl font-bold text-header mb-8">
					Why Lynchburg Businesses Choose United Security
				</h2>
				<div class="grid md:grid-cols-2 gap-8 mb-12">
					<div class="bg-white rounded-lg p-6 shadow-md">
						<h3 class="text-xl font-semibold text-header mb-4">Industrial Experience</h3>
						<p class="text-body">Extensive experience with manufacturing, healthcare, and industrial facilities throughout Central Virginia.</p>
					</div>
					<div class="bg-white rounded-lg p-6 shadow-md">
						<h3 class="text-xl font-semibold text-header mb-4">Compliance Expertise</h3>
						<p class="text-body">Deep understanding of HIPAA, OSHA, and industrial safety requirements for complete compliance.</p>
					</div>
					<div class="bg-white rounded-lg p-6 shadow-md">
						<h3 class="text-xl font-semibold text-header mb-4">Central Virginia Local</h3>
						<p class="text-body">Virginia-based company with rapid response capabilities throughout the Lynchburg metropolitan area.</p>
					</div>
					<div class="bg-white rounded-lg p-6 shadow-md">
						<h3 class="text-xl font-semibold text-header mb-4">24/7 Operations Support</h3>
						<p class="text-body">Understanding of round-the-clock industrial operations with security systems designed for continuous use.</p>
					</div>
				</div>
			</div>
		</div>
	</section>

	<ContactSection client:load />
	<Footer client:load />
</Layout>