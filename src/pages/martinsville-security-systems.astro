---
import Layout from '../layouts/Layout.astro';
import MainNavigation from '../components/MainNavigation';
import ContactSection from '../components/ContactSection';
import Footer from '../components/Footer';
import SchemaMarkup from '../components/SchemaMarkup';
import InternalLinkCard from '../components/InternalLinkCard';
import { Button } from '../components/ui/button';
import { Factory, Truck, Building2, Car, CheckCircle, Phone, Star, MapPin } from 'lucide-react';
import '../styles/global.css';

const schemaData = {
  serviceName: "Martinsville Security Systems",
  name: "Professional Security Systems Martinsville Virginia",
  description: "Expert security systems for Martinsville and Henry County businesses. Access control, security cameras, locksmith services for manufacturing, automotive, and industrial facilities.",
  url: "https://unitedsecurityva.com/martinsville-security-systems",
  areaServed: ["Martinsville", "Henry County", "Ridgeway", "Collinsville", "Bassett", "Stanleytown"],
  offers: [
    {
      "@type": "Offer",
      "itemOffered": {
        "@type": "Service",
        "name": "Martinsville Manufacturing Security",
        "description": "Industrial security systems for Martinsville area manufacturing and automotive facilities"
      }
    },
    {
      "@type": "Offer", 
      "itemOffered": {
        "@type": "Service",
        "name": "Martinsville Access Control Installation",
        "description": "Professional access control systems for Henry County businesses and industrial facilities"
      }
    },
    {
      "@type": "Offer",
      "itemOffered": {
        "@type": "Service", 
        "name": "Martinsville Commercial Locksmith",
        "description": "Industrial locksmith services for Martinsville manufacturing and automotive facilities"
      }
    }
  ]
};
---

<Layout 
  title="Martinsville Security Systems | Industrial Security Henry County VA | United Security" 
  description="Professional security systems for Martinsville & Henry County businesses. Manufacturing, automotive & industrial security. Access control, cameras, locksmith. Licensed since 1988."
  type="service"
>
	<SchemaMarkup type="Service" data={schemaData} client:load />
	
	<MainNavigation client:load />
	
	<!-- Hero Section -->
	<section class="relative py-24 lg:py-32 bg-gradient-to-br from-hero-bg to-primary-light overflow-hidden">
		<div class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1581094794329-c8112a89af12?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80')] bg-cover bg-center opacity-10"></div>
		<div class="relative container mx-auto px-4 sm:px-6 lg:px-8">
			<div class="max-w-4xl mx-auto text-center">
				<h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-header mb-6 animate-fade-in-up">
					<span class="text-primary">Martinsville Security Systems</span><br>
					Industrial Security Specialists
				</h1>
				<p class="text-xl lg:text-2xl text-body mb-8 leading-relaxed animate-fade-in-up [animation-delay:0.2s]">
					Comprehensive security solutions for Martinsville and Henry County's manufacturing, automotive, and industrial sectors. Professional access control, surveillance, and locksmith services.
				</p>
				<div class="flex flex-col sm:flex-row gap-4 justify-center items-center animate-fade-in-up [animation-delay:0.4s]">
					<Button size="xl" className="bg-primary hover:bg-primary-hover text-white font-semibold" onClick={() => {
						document.getElementById('contact')?.scrollIntoView({ behavior: 'smooth' });
					}}>
						Get Free Martinsville Security Quote
					</Button>
					<Button variant="outline" size="xl" className="border-primary text-primary hover:bg-primary hover:text-white" asChild>
						<a href="tel:540-989-9393" class="flex items-center">
							<Phone className="w-5 h-5 mr-2" />
							Call 540-989-9393
						</a>
					</Button>
				</div>
			</div>
		</div>
	</section>

	<!-- Trust Indicators -->
	<section class="py-12 bg-white border-b border-gray-100">
		<div class="container mx-auto px-4 sm:px-6 lg:px-8">
			<div class="flex flex-wrap justify-center items-center gap-8 text-body">
				<div class="flex items-center">
					<CheckCircle className="w-5 h-5 mr-2 text-primary" />
					<span>Licensed DCJS# 11-3283</span>
				</div>
				<div class="flex items-center">
					<CheckCircle className="w-5 h-5 mr-2 text-primary" />
					<span>Manufacturing Security Experts</span>
				</div>
				<div class="flex items-center">
					<CheckCircle className="w-5 h-5 mr-2 text-primary" />
					<span>Automotive Industry Experience</span>
				</div>
				<div class="flex items-center">
					<CheckCircle className="w-5 h-5 mr-2 text-primary" />
					<span>Henry County Local</span>
				</div>
			</div>
		</div>
	</section>

	<!-- Martinsville Market Overview -->
	<section class="py-20 bg-section-bg">
		<div class="container mx-auto px-4 sm:px-6 lg:px-8">
			<div class="max-w-6xl mx-auto">
				<div class="text-center mb-16">
					<h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-header mb-6">
						Security for Martinsville's Industrial Heritage
					</h2>
					<p class="text-xl text-body max-w-3xl mx-auto leading-relaxed">
						From automotive manufacturing to furniture production, we provide robust security solutions tailored to Martinsville and Henry County's diverse industrial and manufacturing landscape.
					</p>
				</div>

				<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
					<div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300">
						<div class="w-16 h-16 bg-primary/10 rounded-xl flex items-center justify-center mb-6">
							<Car className="w-8 h-8 text-primary" />
						</div>
						<h3 class="text-xl font-bold text-header mb-4">Automotive Manufacturing</h3>
						<p class="text-body leading-relaxed mb-6">
							Specialized security systems for Martinsville's automotive manufacturing facilities, protecting production lines, equipment, and ensuring worker safety.
						</p>
						<ul class="space-y-2">
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">Production floor security</span>
							</li>
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">Equipment protection</span>
							</li>
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">Shift access control</span>
							</li>
						</ul>
					</div>

					<div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300">
						<div class="w-16 h-16 bg-primary/10 rounded-xl flex items-center justify-center mb-6">
							<Factory className="w-8 h-8 text-primary" />
						</div>
						<h3 class="text-xl font-bold text-header mb-4">Manufacturing Facilities</h3>
						<p class="text-body leading-relaxed mb-6">
							Heavy-duty security solutions for Henry County's diverse manufacturing sector, from textiles to furniture production requiring comprehensive protection.
						</p>
						<ul class="space-y-2">
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">Textile facilities</span>
							</li>
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">Furniture manufacturing</span>
							</li>
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">Industrial warehouses</span>
							</li>
						</ul>
					</div>

					<div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300">
						<div class="w-16 h-16 bg-primary/10 rounded-xl flex items-center justify-center mb-6">
							<Building2 className="w-8 h-8 text-primary" />
						</div>
						<h3 class="text-xl font-bold text-header mb-4">Commercial Properties</h3>
						<p class="text-body leading-relaxed mb-6">
							Professional security systems for Martinsville's commercial district, office buildings, and retail establishments throughout Henry County.
						</p>
						<ul class="space-y-2">
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">Downtown businesses</span>
							</li>
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">Office complexes</span>
							</li>
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">Retail centers</span>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Service Areas -->
	<section class="py-20 bg-white">
		<div class="container mx-auto px-4 sm:px-6 lg:px-8">
			<div class="max-w-4xl mx-auto text-center">
				<h2 class="text-3xl font-bold text-header mb-8">
					Henry County Service Areas
				</h2>
				<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
					<div class="flex items-center p-4 bg-gray-50 rounded-lg">
						<MapPin className="w-6 h-6 text-primary mr-3" />
						<span class="font-medium text-header">Martinsville</span>
					</div>
					<div class="flex items-center p-4 bg-gray-50 rounded-lg">
						<MapPin className="w-6 h-6 text-primary mr-3" />
						<span class="font-medium text-header">Ridgeway</span>
					</div>
					<div class="flex items-center p-4 bg-gray-50 rounded-lg">
						<MapPin className="w-6 h-6 text-primary mr-3" />
						<span class="font-medium text-header">Collinsville</span>
					</div>
					<div class="flex items-center p-4 bg-gray-50 rounded-lg">
						<MapPin className="w-6 h-6 text-primary mr-3" />
						<span class="font-medium text-header">Bassett</span>
					</div>
					<div class="flex items-center p-4 bg-gray-50 rounded-lg">
						<MapPin className="w-6 h-6 text-primary mr-3" />
						<span class="font-medium text-header">Stanleytown</span>
					</div>
					<div class="flex items-center p-4 bg-gray-50 rounded-lg">
						<MapPin className="w-6 h-6 text-primary mr-3" />
						<span class="font-medium text-header">Henry County</span>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Industrial Security Solutions -->
	<section class="py-20 bg-muted/30">
		<div class="container mx-auto px-4 sm:px-6 lg:px-8">
			<div class="max-w-6xl mx-auto">
				<h2 class="text-3xl font-bold text-header mb-12 text-center">
					Industrial-Grade Security for Martinsville
				</h2>
				<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
					<InternalLinkCard
						title="Manufacturing Access Control"
						description="Heavy-duty access control systems designed for industrial environments with 24/7 shift management and employee tracking."
						href="/access-control-systems-virginia"
						badge="Industrial"
						client:load
					/>
					<InternalLinkCard
						title="Industrial Security Cameras"
						description="High-resolution surveillance systems for production floors, warehouses, and loading docks with real-time monitoring."
						href="/security-cameras-virginia"
						client:load
					/>
					<InternalLinkCard
						title="Automotive Security Systems"
						description="Specialized security solutions for automotive manufacturing facilities with production line protection."
						href="/automotive-security-virginia"
						client:load
					/>
					<InternalLinkCard
						title="Manufacturing Locksmith"
						description="Industrial locksmith services for heavy machinery locks, security hardware, and master key systems."
						href="/commercial-locksmith-virginia"
						client:load
					/>
					<InternalLinkCard
						title="Warehouse Security"
						description="Comprehensive security systems for inventory protection, loading dock monitoring, and perimeter security."
						href="/warehouse-security-virginia"
						client:load
					/>
					<InternalLinkCard
						title="Business Security Systems"
						description="Complete commercial security solutions for Martinsville area offices, retail, and service businesses."
						href="/business-security-systems-virginia"
						client:load
					/>
				</div>
			</div>
		</div>
	</section>

	<!-- Industrial Standards -->
	<section class="py-20 bg-white">
		<div class="container mx-auto px-4 sm:px-6 lg:px-8">
			<div class="max-w-4xl mx-auto text-center">
				<h2 class="text-3xl font-bold text-header mb-8">
					Meeting Industrial Security Standards
				</h2>
				<div class="grid md:grid-cols-2 gap-8 mb-12">
					<div class="bg-gray-50 rounded-lg p-8">
						<h3 class="text-xl font-semibold text-header mb-4">Manufacturing Compliance</h3>
						<ul class="text-left space-y-2">
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">OSHA safety integration</span>
							</li>
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">Industrial fire codes</span>
							</li>
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">Worker safety protocols</span>
							</li>
						</ul>
					</div>
					<div class="bg-gray-50 rounded-lg p-8">
						<h3 class="text-xl font-semibold text-header mb-4">Automotive Standards</h3>
						<ul class="text-left space-y-2">
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">Production line security</span>
							</li>
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">Quality control areas</span>
							</li>
							<li class="flex items-start">
								<CheckCircle className="w-4 h-4 text-primary mt-1 mr-2 flex-shrink-0" />
								<span class="text-sm text-body">Supplier access management</span>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Economic Development Focus -->
	<section class="py-20 bg-section-bg">
		<div class="container mx-auto px-4 sm:px-6 lg:px-8">
			<div class="max-w-4xl mx-auto text-center">
				<h2 class="text-3xl font-bold text-header mb-8">
					Supporting Martinsville's Economic Revitalization
				</h2>
				<p class="text-xl text-body mb-12 leading-relaxed">
					As Martinsville continues its economic transformation and attracts new industries, we provide the security infrastructure necessary to support business growth and investment in Henry County.
				</p>
				<div class="grid md:grid-cols-2 gap-8">
					<div class="text-left">
						<h3 class="text-xl font-semibold text-header mb-4">Industrial Diversification</h3>
						<p class="text-body mb-4">
							Supporting Martinsville's transition from traditional industries to advanced manufacturing and technology with modern security systems that meet contemporary business needs.
						</p>
					</div>
					<div class="text-left">
						<h3 class="text-xl font-semibold text-header mb-4">Investment Protection</h3>
						<p class="text-body mb-4">
							Helping new businesses and expansions in Henry County protect their investments with comprehensive security solutions designed for modern manufacturing and commercial operations.
						</p>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Local Testimonials -->
	<section class="py-20 bg-white">
		<div class="container mx-auto px-4 sm:px-6 lg:px-8">
			<div class="max-w-4xl mx-auto text-center">
				<h2 class="text-3xl font-bold text-header mb-12">
					Trusted by Martinsville Industry Leaders
				</h2>
				<div class="grid md:grid-cols-2 gap-8">
					<div class="bg-gray-50 rounded-lg p-8">
						<div class="flex items-center mb-4">
							{[...Array(5)].map((_, i) => (
								<Star key={i} className="w-5 h-5 text-yellow-400 fill-current" />
							))}
						</div>
						<p class="text-body italic mb-4">
							"United Security designed a comprehensive access control system for our automotive manufacturing facility. They understand the unique requirements of industrial operations and delivered a system that enhances both security and efficiency."
						</p>
						<div class="text-sm text-header font-semibold">
							- Martinsville Manufacturing Plant Manager
						</div>
					</div>
					<div class="bg-gray-50 rounded-lg p-8">
						<div class="flex items-center mb-4">
							{[...Array(5)].map((_, i) => (
								<Star key={i} className="w-5 h-5 text-yellow-400 fill-current" />
							))}
						</div>
						<p class="text-body italic mb-4">
							"Professional installation and excellent ongoing support for our Henry County facility. The security cameras provide complete coverage of our warehouse and production areas. Highly recommend for any industrial business."
						</p>
						<div class="text-sm text-header font-semibold">
							- Henry County Facility Security Manager
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Why Choose for Martinsville -->
	<section class="py-20 bg-primary-light">
		<div class="container mx-auto px-4 sm:px-6 lg:px-8">
			<div class="max-w-4xl mx-auto text-center">
				<h2 class="text-3xl font-bold text-header mb-8">
					Why Martinsville Businesses Choose United Security
				</h2>
				<div class="grid md:grid-cols-2 gap-8 mb-12">
					<div class="bg-white rounded-lg p-6 shadow-md">
						<h3 class="text-xl font-semibold text-header mb-4">Industrial Experience</h3>
						<p class="text-body">Extensive experience with manufacturing, automotive, and industrial facilities throughout Henry County and Southside Virginia.</p>
					</div>
					<div class="bg-white rounded-lg p-6 shadow-md">
						<h3 class="text-xl font-semibold text-header mb-4">Heavy-Duty Solutions</h3>
						<p class="text-body">Security systems designed for the demanding industrial environment with 24/7 operation capabilities and robust construction.</p>
					</div>
					<div class="bg-white rounded-lg p-6 shadow-md">
						<h3 class="text-xl font-semibold text-header mb-4">Southside Virginia Local</h3>
						<p class="text-body">Virginia-based company with understanding of the local business community and rapid response throughout the Martinsville area.</p>
					</div>
					<div class="bg-white rounded-lg p-6 shadow-md">
						<h3 class="text-xl font-semibold text-header mb-4">Economic Development Partner</h3>
						<p class="text-body">Supporting Martinsville's economic revitalization with modern security infrastructure for new and expanding businesses.</p>
					</div>
				</div>
			</div>
		</div>
	</section>

	<ContactSection client:load />
	<Footer client:load />
</Layout>