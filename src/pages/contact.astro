---
import Layout from '../layouts/Layout.astro';
import MainNavigation from '../components/MainNavigation';
import ContactSection from '../components/ContactSection';
import Footer from '../components/Footer';
import SchemaMarkup from '../components/SchemaMarkup';
import { Button } from '../components/ui/button';
import { Phone, Mail, MapPin, Clock, Shield, CheckCircle } from 'lucide-react';
import '../styles/global.css';

const schemaData = {
  "@type": "LocalBusiness",
  "name": "United Security & Control Systems",
  "description": "Professional security services for Southwest Virginia businesses since 1988. Access control, security cameras, locksmith services throughout Virginia.",
  "url": "https://unitedsecurityva.com/contact",
  "telephone": "540-989-9393",
  "email": "info@unitedsecurityva.com",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "6405 Merriman Rd # 204",
    "addressLocality": "Roanoke",
    "addressRegion": "VA",
    "postalCode": "24018",
    "addressCountry": "US"
  },
  "areaServed": [
    "Southwest Virginia", "Roanoke Valley", "New River Valley", "Lynchburg", 
    "Martinsville", "Smith Mountain Lake", "Blacksburg", "Christiansburg"
  ],
  "openingHours": "Mo-Fr 08:00-17:00",
  "priceRange": "$$"
};
---

<Layout 
  title="Contact United Security Virginia | Free Security Consultation Southwest VA" 
  description="Contact United Security for professional security solutions in Southwest Virginia. Free consultations available. Call 540-989-9393 or schedule online."
  type="website"
>
	<SchemaMarkup type="LocalBusiness" data={schemaData} client:load />
	
	<MainNavigation client:load />
	
	<!-- Hero Section with Contact Form -->
	<section class="relative py-24 lg:py-32 bg-gradient-to-br from-gray-100 via-gray-200 to-gray-300 overflow-hidden">
		<div class="relative container mx-auto px-4 sm:px-6 lg:px-8">
			<div class="max-w-6xl mx-auto">
				<!-- Hero Message -->
				<div class="text-center mb-12">
					<h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-header mb-6 animate-fade-in-up">
						<span class="text-primary">Secure What Matters Most</span><br>
						to Your Business
					</h1>
					<p class="text-xl lg:text-2xl text-header mb-8 leading-relaxed animate-fade-in-up [animation-delay:0.2s]">
						Get your free security consultation today. We'll assess your needs and recommend the perfect solution for your Virginia facility.
					</p>
					<div class="flex flex-col sm:flex-row gap-4 justify-center items-center animate-fade-in-up [animation-delay:0.4s]">
						<Button variant="cta-prominent" size="2xl" asChild>
							<a href="tel:540-989-9393" class="flex items-center">
								<Phone class="w-6 h-6 mr-3" />
								Call 540-989-9393 Now
							</a>
						</Button>
					</div>
				</div>
			</div>
		</div>
	</section>

	<ContactSection client:load />
	<Footer client:load />
</Layout>