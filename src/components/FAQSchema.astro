---
export interface FAQItem {
  question: string;
  answer: string;
}

export interface Props {
  faqs: FAQItem[];
}

const { faqs } = Astro.props;

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer
    }
  }))
};
---

<script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />

<section class="py-12 bg-gray-50">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-3xl font-bold text-header mb-8 text-center">
        Frequently Asked Questions
      </h2>
      <div class="space-y-6">
        {faqs.map((faq, index) => (
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6" key={index}>
            <h3 class="text-xl font-semibold text-header mb-3">
              {faq.question}
            </h3>
            <p class="text-body leading-relaxed">
              {faq.answer}
            </p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>